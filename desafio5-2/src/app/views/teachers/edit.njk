{% extends 'layout.njk' %}

{% block header %}
    <title>Register Teacher</title>
{% endblock header %}

{% block content %}
<div class="teacher-card">
    <section class="avatar"
        style="background: url(https://source.unsplash.com/collection/8874679/500x500) no-repeat center center / cover;">>
    </section>

    <section class="details">
        <form method="POST" action="/teachers?_method=PUT">
            <h3>Editar Instrutor</h3>
            {% include 'teachers/fields.njk'%}
            <input type="hidden" name="id" value="{{teacher.id}}">
        </form>

        <form id="form-delete" method="POST" action="/teachers?_method=DELETE">
            <input type="hidden" name="id" value="{{teacher.id}}">
            <button type="submit">Deletar</button>
        </form>

    </section>

</div>

<script> {% include "./../delete.js" %} </script>

{% endblock content %}

