<div class="infos">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" value="{{teacher.avatar_url}}" placeholder="http://...">
    </div>
</div>

<div class="infos">
    <div>Nome Completo</div>
    <div>
        <input type="text" name="name" value="{{teacher.name}}" placeholder="Digite seu nome aqui">
    </div>
</div>

<div class="infos">
    <div>Data de Nascimento</div>
    <div>
        <input type="date" name="birth" value="{{teacher.birth}}">
    </div>
</div>

<div class="infos">
    <div>Grau de Escolaridade</div>
    <div>
        <select name="education" id="">
            <option value="high-school" {% if teacher.education == "high-school" %} selected="selected" {% endif %}
            >Ensino Médio Completo</option>
            
            <option value="college" {% if teacher.education == "college" %} selected="selected" {% endif %}
            >Ensino Superior Completo</option>
            
            <option value="master" {% if teacher.education == "master" %} selected="selected" {% endif %}
            >Mestrado</option>
            
            <option value="doctor" {% if teacher.education == "doctor" %} selected="selected" {% endif %}
            >Doutorado</option>
        </select>
    </div>
</div>

<div class="infos">
    <div>Tipo de Aula</div>
    <div>
        <span><input type="radio" name="class_type" value="Presencial" 
        {% if teacher.class_type == "Presencial" %} checked {% endif %}
        >Presencial</span>
        <span><input type="radio" name="class_type" value="À Distancia"
        {% if teacher.class_type == "À Distancia" %} checked {% endif %}
        >À Distância</span>
    </div>
</div>

<div class="infos">
    <div>Área de Atuação</div>
    <div>
        <input type="text" name="subjects"  value="{{teacher.subjects}}" placeholder="Digite as áreas separado por vírgula">
    </div>
</div>

<button type="submit">Salvar</button>